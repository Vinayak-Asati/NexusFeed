# Application
LOG_LEVEL=INFO
DEBUG=false
SANDBOX_MODE=true
REFRESH_INTERVAL=5

# Database (Postgres)
# Outside Docker: localhost; inside Compose: host is 'postgres'
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nexusfeed
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/nexusfeed

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Web app
APP_HOST=0.0.0.0
APP_PORT=8000